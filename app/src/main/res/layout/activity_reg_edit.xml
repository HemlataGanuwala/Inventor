<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgcable"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:gravity="center"
                android:text="EDIT / DELETE"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                app:fontFamily="@font/aclonica" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/eteditcustname"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/textbg"
                        android:ems="10"
                        android:hint="Customer Name"
                        android:inputType="textCapWords|textPersonName"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:theme="@style/AccentAppTheme" />

                    <EditText
                        android:id="@+id/eteditaddress"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/textbg"
                        android:ems="10"
                        android:hint="Address"
                        android:inputType="textCapSentences|textPostalAddress"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:theme="@style/AccentAppTheme" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/eteditmobile"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/textbg"
                            android:ems="10"
                            android:hint="Mobile No."
                            android:inputType="phone"
                            android:paddingLeft="10dp"
                            android:textStyle="bold"
                            android:theme="@style/AccentAppTheme"/>

                        <EditText
                            android:id="@+id/eteditarea"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/textbg"
                            android:ems="10"
                            android:hint="Area"
                            android:inputType="textCapWords|textPersonName"
                            android:paddingLeft="10dp"
                            android:textStyle="bold"
                            android:theme="@style/AccentAppTheme" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/eteditnobox"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/textbg"
                            android:ems="10"
                            android:hint="No. Box"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:textStyle="bold"
                            android:theme="@style/AccentAppTheme"/>

                        <EditText
                            android:id="@+id/eteditsetboxdetail"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight=".30"
                            android:background="@drawable/textbg"
                            android:ems="10"
                            android:hint="Setupbox Details"
                            android:inputType="textCapWords|textMultiLine"
                            android:paddingLeft="10dp"
                            android:textStyle="bold"
                            android:theme="@style/AccentAppTheme" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/spineditpackage"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/textbg"
                            android:paddingLeft="10dp"
                            android:theme="@style/AccentAppTheme"/>

                        <EditText
                            android:id="@+id/eteditrate"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/textbg"
                            android:ems="10"
                            android:hint="Monthly Charge"
                            android:paddingLeft="10dp"
                            android:textStyle="bold"
                            android:theme="@style/AccentAppTheme"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/spineditagentname"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/textbg"
                        android:paddingLeft="10dp"
                        android:theme="@style/AccentAppTheme"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tveditregad"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_weight=".30"
                            android:background="@drawable/textbg"
                            android:gravity="center"
                            android:textSize="18sp" />


                        <com.suke.widget.SwitchButton
                            android:id="@+id/switch_buttonedit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <Button
                            android:id="@+id/btnedit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="40dp"
                            android:background="@drawable/buttonbg"
                            android:text="Edit"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/btndelete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="40dp"
                            android:background="@drawable/buttonbg"
                            android:text="DELETE"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>